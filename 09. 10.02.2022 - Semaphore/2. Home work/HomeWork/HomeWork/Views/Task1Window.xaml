<Window x:Class="HomeWork.Views.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork.Views"
        xmlns:models="clr-namespace:HomeWork.Models"
        mc:Ignorable="d"
        Title="Задание 1. Числа" MinHeight="450" MinWidth="1000"
        Background="#320571" Foreground="White"
        FontFamily="Verdana" FontSize="14"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <!--#region Комнады -->
    <Window.CommandBindings>
        <CommandBinding Command="models:WindowCommands.Exit"            Executed="Exit_Executed"/>
        <CommandBinding Command="models:WindowCommands.StartThreads"    Executed="StartThreads_Executed"/>
    </Window.CommandBindings>
    <!--#endregion-->

    <!--#region Контекстное меню -->
    <Window.ContextMenu>
        <ContextMenu>
            <!-- Запуск всех потоков -->
            <MenuItem Command="models:WindowCommands.StartThreads" Height="30" Foreground="Black"/>

            <Separator/>

            <!-- Выход -->
            <MenuItem Command="models:WindowCommands.Exit" Height="30" Foreground="Black"/>
        </ContextMenu>
    </Window.ContextMenu>
    <!--#endregion -->

    <Grid>
        <!-- Строки -->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>


        <!--#region Панели управления -->

        <!--#region Меню -->
        <Menu Background="#8144D6" 
              Height="35"
              FontFamily="Verdana"
              FontSize="14"
              Foreground="White">
            <!-- Файл -->
            <MenuItem Header="Файл" Height="35">
                <!-- Выход -->
                <MenuItem Command="models:WindowCommands.Exit" Height="30" Foreground="Black"/>
            </MenuItem>

            <!-- Потоки -->
            <MenuItem Header="Потоки" Height="35">
                <!-- Запуск всех потоков -->
                <MenuItem Command="models:WindowCommands.StartThreads" Height="30" Foreground="Black"/>

            </MenuItem>

        </Menu>
        <!--#endregion Меню -->


        <!--#region ToolBar -->
        <ToolBarTray Grid.Row="1"
                     Background="#976BD6">
            <ToolBar Height="40" Padding="10 0 0 0"
                     Background="Transparent"
                     MinWidth="300"
                     ToolBarTray.IsLocked="True">
                <Button Command="models:WindowCommands.StartThreads"
                        ToolTip="Запуск всех потоков">
                    <Image Source="../Images/control_play_blue.png"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <!--#endregion ToolBar -->


        <!--#region StatusBar -->
        <StatusBar Grid.Row="3"
                   Background="#976BD6">

        </StatusBar>
        <!--#endregion StatusBar -->

        <!--#endregion Панели управления-->

        <!--#region Контент окна -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--#region Производитель -->
            <GroupBox Header="Производитель" Grid.Row="0" Grid.Column="0"
                      Margin="10">
                <StackPanel Margin="15">
                    <TextBox Name="TbxProducerValue" 
                             Background="Transparent" Foreground="White"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Text="Последнее значение: "/>
                </StackPanel>
            </GroupBox>
            <!--#endregion-->

            <!--#region Хранилище -->
            <GroupBox Header="Хранилище" Grid.Row="1" Grid.Column="0"
                      Margin="10">
                <StackPanel Margin="15">
                    <TextBox Name="TbxStoreStatus" 
                             Background="Transparent" Foreground="White"
                             IsReadOnly="True" Margin="0 10 0 0"
                             BorderThickness="0"
                             Text="Наличие данных: "/>
                </StackPanel>

            </GroupBox>
            <!--#endregion-->
            
            <!--#region Потребитель (обработчик) -->
            <GroupBox Header="Потребитель (обработчик)" Grid.Row="0" Grid.Column="1"
                      Grid.RowSpan="2"
                      Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition MinWidth="300" Width="40*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Данные о потребителе -->
                    <StackPanel Margin="10">
                        <TextBox Name="TbxConsumerCount" 
                                 Background="Transparent" Foreground="White"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Margin="10"
                                 Text="Количество чисел: "/>

                        <TextBlock Background="Transparent" Foreground="White"
                                   Margin="10 40 10 0" TextWrapping="Wrap">
                            1 столбец - исходные числа<LineBreak/><LineBreak/>
                            2 столбец - нечётные числа в конце
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Вывод чисел -->
                    <Grid Grid.Column="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Заголовок столбца -->
                        <TextBox Background="Transparent" Foreground="White"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Margin="10"
                                 Text="1"
                                 HorizontalContentAlignment="Center"/>

                        <!-- Обрабатываемые числа -->
                        <DataGrid Name="DgdNumbers" Grid.Column="0" Grid.Row="1"
                                  Background="#FF6E12A5"
                                  RowBackground="#FF6E12A5"
                                  Margin="10"
                                  AutoGenerateColumns="False"
                                  CanUserResizeRows="False"
                                  ColumnWidth="*"
                                  HeadersVisibility="None"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  BorderBrush="Black"
                                  BorderThickness="2"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Path=Value}"
                                               HorizontalContentAlignment="Center"
                                               Foreground="White"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>


                        <!-- Заголовок столбца -->
                        <TextBox Background="Transparent" Foreground="White"
                                 IsReadOnly="True" Grid.Column="1"
                                 BorderThickness="0"
                                 Margin="10"
                                 Text="2"
                                 HorizontalContentAlignment="Center"/>

                        <!-- Обрабатываемые числа -->
                        <DataGrid Name="DgdNumbersSort" Grid.Column="1" Grid.Row="1"
                                  Background="#FF6E12A5"
                                  RowBackground="#FF6E12A5"
                                  Margin="10"
                                  AutoGenerateColumns="False"
                                  CanUserResizeRows="False"
                                  ColumnWidth="*"
                                  HeadersVisibility="None"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  BorderBrush="Black"
                                  BorderThickness="2"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Path=Value}"
                                                   HorizontalContentAlignment="Center"
                                                   Foreground="White"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </Grid>
            </GroupBox>
            <!--#endregion-->

        </Grid>
        <!--#endregion Контент окна -->
    </Grid>
</Window>
